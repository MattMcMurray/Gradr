extends ./base.jade

block stylesheets
    link(href='/css/index.css', rel='stylesheet')


block content
    .container.text-center
        img(src="/img/gradr_logo.png")
        hr
        p.lead
            | Gradr is a study buddy finder based on current dating applications.
    
    .container
        form(role=form)
            .form-group
                label(for="username")
                    | Username
                input#username.form-control(type="username")
            .form-group
                label(for="password")
                    |Password
                input.form-control#password(type="password")
            .checkbox
                label
                    input(type="checkbox") 
                    | Remember me

            
            button.btn.btn-primary.login-buttons(type="submit") Register
            button.btn.btn-warning.login-buttons(type="button") Cancel
block scripts
   script(src='/js/signup.js') 
